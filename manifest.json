{
	"jpsType": "update",
	"jpsVersion": "0.5",
	"application": {
		"targetNodes": {
			"nodeType": [
					"apache2",
					"nginxphp",
					"tomcat6",
					"tomcat7",
					"tomcat8",
					"tomee",
					"jetty6",
					"jetty8",
					"jetty9"
			]
		},
		"categories": [
				"apps/dev-tools",
				"apps/popular",
				"apps/management-and-monitoring", "apps/dev-and-admin-tools"
		],
		"name": "New Relic APM",
		"version": "3.6",
		"homepage": "https://newrelic.com/",
		"logo": "https://raw.githubusercontent.com/jelastic-jps/NewRelicAPM/master/images/newrelic_70x70.png",
		"description": {
			"short": "Monitor and troubleshoot your Java/PHP web apps",
			"text": "New Relic Agent is a tool for the advanced monitoring of your Java or PHP appâ€™s performance based on a number of application server metrics like response time, throughput, error rates, data transfer size, etc. It allows to gather and analyze the corresponding data within your New Relic account for diagnosing possible problems in your project's productivity and boosting its efficiency.<br><div style=\"margin-top:10px\">The New Relic add-on can be installed to Java and PHP web servers.</div>"
		},
		"menu": [{
				"caption": "Update Agent",
				"procedure": "updateAgent",
				"confirmText": "This option will check for the New Relic Agent updates. Would you like to continue?",
				"successText": "The New Relic add-on was updated. Please, restart your web server instance for the changes to be applied.",
				"loadingText": "Performing NewRelic update..."
			}
		],
		"settings": {
			"fields": [{
					"type": "string",
					"name": "app_name",
					"caption": "Application name",
					"required": true,
					"default": "${env.domain}"
				}, {
					"type": "string",
					"name": "license_key",
					"caption": "License key",
					"vtype": "alphanum",
					"vtypeText": "Alphanumeric input only.",
					"required": true,
					"default": "0000000000000000000000000000000000000000"
				}
			]
		},
		"onInstall": {
			"call": [{
					"procedure": "checkEngine",
					"params": {
						"action": "install"
					}
				}
			]
		},
		"onUninstall": {
			"call": {
				"procedure": "checkEngine",
				"params": {
					"action": "uninstall"
				}
			}
		},
		"procedures": [{
				"id": "updateAgent",
				"onCall": [{
						"call": {
							"procedure": "checkEngine",
							"params": {
								"action": "update"
							}
						}
					}
				]
			}, {
				"id": "updateJavaAgent",
				"onCall": {
					"executeShellCommands": {
						"nodeMission": "cp",
						"user": "root",
						"commands": [
								"curl -fsSL \"https://raw.githubusercontent.com/jelastic-jps/NewRelicAPM/master/scripts/newRelicUpdate.sh\" -o /tmp/newrelicUpdateJava.sh &>> /var/log/newrelic.log",
								"bash /tmp/newrelicUpdateJava.sh \"${SERVER_LIBS}\" \"${settings.license_key}\" \"${settings.app_name}\" &>> /var/log/newrelic.log"
						]
					}
				}
			}, {
				"id": "updatePhpAgent",
				"onCall": {
					"executeShellCommands": {
						"nodeMission": "cp",
						"user": "root",
						"commands": [
								"yum update -y newrelic-php5 &>>/var/log/newrelic.log",
								"if [ echo `pidof newrelic-daemon` != \"\" ]; then echo a 1>>/var/log/newrelic.log 2>>/var/log/newrelic.log; else killall -9 newrelic-daemon &>> /var/log/newrelic.log; fi"
						]
					}
				}
			}, {
				"id": "uninstallJavaAgent",
				"onCall": [{
						"executeShellCommands": {
							"nodeMission": "cp",
							"commands": [
									"curl -fsSL \"https://raw.githubusercontent.com/jelastic-jps/NewRelicAPM/master/scripts/uninstallJava.sh\" -o /tmp/uninstallJava.sh &>> /var/log/newrelic.log",
									"bash /tmp/uninstallJava.sh \"${SERVER_LIBS}\" &>> /var/log/newrelic.log"
							],
							"user": "root"
						}
					}
				]
			}, {
				"id": "uninstallPhpAgent",
				"onCall": [{
						"executeShellCommands": [{
								"nodeMission": "cp",
								"commands": [
										"yum -y remove newrelic*",
										"sed -ir \"s|.*newrelic.*||g\" /etc/php.ini"
								],
								"user": "root"
							}
						]
					}
				]
			}, {
				"id": "installPhpAgent",
				"onCall": [{
						"executeShellCommands": [{
								"nodeMission": "cp",
								"commands": [
										"if [ -z \"$(rpm -qa | grep newrelic-repo-5-3)\" ]; then rpm -Uvh https://raw.githubusercontent.com/jelastic-jps/NewRelicAPM/master/dumps/newrelic-repo-5-3.noarch.rpm &>> /var/log/newrelic.log; fi",
										"if [ -z \"$(rpm -qa | grep newrelic-php5)\" ]; then yum -y install newrelic-php5; fi",
										"if [ -z \"$(rpm -qa | grep newrelic-sysmond)\" ]; then yum -y install newrelic-sysmond; fi",
										"nrsysmond-config --set license_key=${settings.license_key}",
										"sed -ir \"s|.*disable_docker=.*|disable_docker=true|g\" /etc/newrelic/nrsysmond.cfg",
										"/etc/init.d/newrelic-sysmond start",
										"curl -fsSL \"https://raw.githubusercontent.com/jelastic-jps/NewRelicAPM/master/scripts/newRelicPHP.sh\" -o /usr/lib/newrelic-php5/newrelic-install.sh &>> /var/log/newrelic.log",
										"curl -fsSL \"https://raw.githubusercontent.com/jelastic-jps/NewRelicAPM/master/dumps/newrelic.ini\" -o /tmp/newrelic.ini &>> /var/log/newrelic.log",
										"rm /etc/php.d/newrelic.ini",
										"grep -q \"newrelic.so\" /etc/php.ini || cat /tmp/newrelic.ini &>> /etc/php.ini",
										"grep -q \"newrelic.so\" /etc/php.ini && sed -ri \"s|REPLACE_WITH_REAL_KEY|${settings.license_key}|g\"  /etc/php.ini",
										"grep -q \"newrelic.so\" /etc/php.ini && sed -ri \"s|PHP Application|${settings.app_name}|g\" /etc/php.ini ",
										"bash /usr/bin/newrelic-install &>> /var/log/newrelic.log",
										"rm /etc/php.d/newrelic.ini"
								],
								"user": "root"
							}
						]
					}
				]
			}, {
				"id": "checkEngine",
				"onCall": [{
						"executeScript": {
							"type": "js",
							"script": "https://raw.githubusercontent.com/jelastic-jps/NewRelicAPM/master/scripts/checkEngineNodes.js"
						}
					}
				]
			}, {
				"id": "installJavaAgent",
				"onCall": [{
						"executeShellCommands": [{
								"nodeMission": "cp",
								"commands": [
										"curl -fsSL \"https://raw.githubusercontent.com/jelastic-jps/NewRelicAPM/master/scripts/NewRelicJavaNew.sh\" -o /tmp/newrelicJava.sh &>> /var/log/newrelic.log",
										"bash /tmp/newrelicJava.sh \"${SERVER_LIBS}\" \"${settings.license_key}\" \"${settings.app_name}\" &>> /var/log/newrelic.log"
								],
								"user": "root"
							}
						]
					}
				]
			}
		],
		"success": "The installation has been successfully completed. Please, restart your web server instance to apply the changes.</br>After that, you can navigate to your New Relic control panel</a> and explore your app's performance data. <a href='http://newrelic.com/product/' target='_blank'><u>More info</u></a><br>Refer to the <a href='https://docs.newrelic.com/docs/apm/new-relic-apm/troubleshooting'><u>Troubleshooting</u></a> guide in case you face any issues with New Relic APM usage or installation."
	}
}